<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="183dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/round_order">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.76"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35">

                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="92dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardUseCompatPadding="true">

                    <ImageView
                        android:id="@+id/ivsearchimage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/medi_1" />

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="11dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.7">

                <TextView
                    android:id="@+id/tvsermediname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roppinsregular"
                    android:text="Best Care Pharmacy"
                    android:textColor="#979A9A"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/tvmedicinename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvsermediname"
                    android:fontFamily="@font/roppinsregular"
                    android:text="Center Pharmacy"
                    android:textColor="#2b3132"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/tick1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvmedicinename"
                    android:layout_marginTop="13dp"
                    android:src="@drawable/ic_medi_tick" />

                <TextView
                    android:id="@+id/tvmedicinenamepower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvmedicinename"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_toEndOf="@id/tick1"
                    android:fontFamily="@font/roppinsregular"
                    android:text="Paracetamol 325 pow"
                    android:textColor="#545A5B"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />


                <ImageView
                    android:id="@+id/tick2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tick1"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_medi_tick" />

                <TextView
                    android:id="@+id/tvmedicinenamepower1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvmedicinenamepower"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_toEndOf="@id/tick1"
                    android:fontFamily="@font/roppinsregular"
                    android:text="Tramadol Hydrochloride 37.5 mg"
                    android:textColor="#545A5B"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />

